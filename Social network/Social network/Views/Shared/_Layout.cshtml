<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Social network</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="UserPage" asp-route-id="1">Social_network</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="form-horizontal">

                <div class="container">
                    <table border-collapse="collaps">
                        <tr>
                            <td class="align-top">
                                <table class="table table-bordered" style="border-collapse:separate">

                                    <tr>
                                        <td bgcolor="#D3EDF6" style="padding:0px">
                                            <a class="nav-link text-dark" asp-controller="User" asp-action="UserPage" asp-route-id="1">Главная</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="alert-dark" style="padding:0px">
                                            <a class="nav-link text-dark" asp-controller="User" asp-action="??????">Лента</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="alert-dark" style="padding:0px">
                                            <a class="nav-link text-dark" asp-controller="User" asp-action="??????">Сообщения</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="alert-dark" style="padding:0px">
                                            <a class="nav-link text-dark" asp-controller="User" asp-action="??????">Группы</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="alert-dark" style="padding:0px">
                                            <a class="nav-link text-dark" asp-controller="Friends" asp-action="DoingsWithFriends" asp-route-id="1">Друзья</a>
                                        </td>
                                    </tr>

                                </table>
                            </td>
                            <td width="100%" style="vertical-align:top">
                                @RenderBody()
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Social network - Ukhan Yaroslav
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
