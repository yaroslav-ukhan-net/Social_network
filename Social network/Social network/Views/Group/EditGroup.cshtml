@model Social_network.ViewModels.GroupsViewModel

<form asp-action=@ViewData["Action"]>
    <div>
        @if (ViewData["Action"].ToString() == "EditGroup")
        {
            <h4>Edit group</h4>
        }
        else
        {
            <h4>Create new Group</h4>
        }
        <hr />
        @Html.HiddenFor(n=>n.UserIsModerator)
        @Html.HiddenFor(n=>n.GroupAdminName)
        @Html.HiddenFor(n=>n.GroupId)
        
        <div class="form-group">
            <label asp-for="GroupName" class="col-lg-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GroupAvatarURL" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="GroupAvatarURL" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GroupNotes" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="GroupNotes" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsClose" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <p><input asp-for="IsClose" type="radio" value="true" />Зыкрытая</p>
                <p><input asp-for="IsClose" type="radio" value="false" />Открытая</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>