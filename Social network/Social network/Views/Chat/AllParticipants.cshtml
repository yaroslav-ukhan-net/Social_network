@model SocialNetwork.ViewModels.ChatsViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div>@localizer["All Participants"] </div>
<nav>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @localizer["Avatar"]
                </th>
                <th>
                    @localizer["Name"]
                </th>
                <th>
                    @localizer["Surname"]
                </th>

            </tr>
        </thead>
        @foreach (var user in Model.UserChat)
        {
            <tbody>
                <tr>
                    <td>
                        <img src="@user.User.AvatarURL" width="15" />
                    </td>
                    <td>
                        @user.User.Name
                    </td>
                    <td>
                        @user.User.Surname
                    </td>
                </tr>
            </tbody>
        }
    </table>
</nav>