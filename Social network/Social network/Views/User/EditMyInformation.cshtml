@model Social_network.ViewModels.UserViewModel

<form asp-action="EditMyInformation">
    <div>
        <h4>Edit My Information</h4>
        <hr />
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-lg-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="Surname" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="BirthDate" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="PhoneNumber" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AvatarURL" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="AvatarURL" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Notes" class="col-lg-3 col-form-label-lg"></label>
            <div class="col-md-11">
                <input asp-for="Notes" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>